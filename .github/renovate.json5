{
  "extends": [
    "config:recommended",
    "docker:enableMajor",
    ":automergeBranch",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":enablePreCommit",
    ":semanticCommits",
    ":skipStatusChecks",
    ":timezone(Europe/Berlin)",
    "github>cbirkenbeul/homelab//.github/renovate/autoMerge.json5",
    "github>cbirkenbeul/homelab//.github/renovate/commitMessage.json5",
    "github>cbirkenbeul/homelab//.github/renovate/customManagers.json5",
    "github>cbirkenbeul/homelab//.github/renovate/grafanaDashboards.json5",
    "github>cbirkenbeul/homelab//.github/renovate/groups.json5",
    "github>cbirkenbeul/homelab//.github/renovate/labels.json5",
    "github>cbirkenbeul/homelab//.github/renovate/packageRules.json5",
    "github>cbirkenbeul/homelab//.github/renovate/semanticCommits.json5"
  ],
"dependencyDashboardTitle": "Renovate Dashboard ðŸ¤–",
"suppressNotifications": ["prIgnoreNotification"],
"docker-compose": {
  "fileMatch": ["ansible/.+/docker-compose.*\\.ya?ml(\\.j2)?$"]
},
"flux": {
  "fileMatch": [
    "k3s-cluster/.+\\.ya?ml$",
    "kubernetes/.+\\.ya?ml$"]
},
"helm-values": {
  "fileMatch": [
    "k3s-cluster/.+\\.ya?ml$",
    "kubernetes/.+\\.ya?ml$"]
},
"kubernetes": {
  "fileMatch": [
    "ansible/.+\\.ya?ml(\\.j2)?$",
    "k3s-cluster/.+\\.ya?ml$",
    "kubernetes/.+\\.ya?ml$"
  ]
},
"regexManagers": [
    {
      "description": "Process various other dependencies",
      "fileMatch": [
        "ansible/.+\\.ya?ml(\\.j2)?$",
        "k3s-cluster/.+\\.ya?ml$",
        "kubernetes/.+\\.ya?ml$"
      ],
      "matchStrings": [
        "datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( registryUrl=(?<registryUrl>\\S+))?\n.*?\"(?<currentValue>.*)\"\n"
      ],
      "datasourceTemplate": "{{#if datasource}}{{{datasource}}}{{else}}github-releases{{/if}}"
    },
    {
      "description": "Handle version strings like amd64-1734177451",
      "fileMatch": [
        "ansible/.+\\.ya?ml(\\.j2)?$",
        "k3s-cluster/.+\\.ya?ml$",
        "kubernetes/.+\\.ya?ml$"
      ],
      "matchStrings": [
        "image: (?<depName>\\S+):(?<currentValue>amd64-[0-9]+)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "regex:^amd64-(?<number>[0-9]+)$"
    }
  ]
}