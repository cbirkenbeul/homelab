---
version: '3.8'

services:
  blocky:
    image: spx01/blocky:v0.20
    container_name: blocky
    restart: unless-stopped
    ports:
      - "53:53/tcp"
      - "53:53/udp"
      - "4000:4000/tcp"
    environment:
      - TZ=Europe/Berlin
    volumes:
      - {{containers_base_dir}}/config/blocky/config.yml:/app/config.yml