---
version: '3.8'

services:
  blocky:
    image: ghcr.io/0xerr0r/blocky:v0.22
    container_name: blocky
    restart: unless-stopped
    environment:
      TZ: Europe/Berlin
    ports:
      - "53:53/tcp"
      - "53:53/udp"
      - "4000:4000/tcp"
    volumes:
      - /container/config/blocky/config.yml:/app/config.yml
