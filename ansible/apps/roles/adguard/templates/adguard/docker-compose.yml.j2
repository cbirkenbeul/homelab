---
version: '3'

services:
  adguard:
    container_name: adguard
    image: adguard/adguardhome:v0.107.22
    restart: unless-stopped
    volumes:
      - adguard-workdir:/opt/adguardhome/work
      - {{ containers_base_dir }}/config/adguard:/opt/adguardhome/conf
    ports:
      - 53:53/udp
      - 53:53/tcp
      - 67:67/udp
      - 68:68/udp
      - 80:80/tcp
      - 443:443/tcp
      - 443:443/udp
      - 3000:3000/tcp
      - 853:853/tcp
      - 784:784/udp
      - 8853:8853/udp
      - 5443:5443/tcp
      - 5443:5443/udp

volumes:
  adguard-workdir:
    driver: local
    driver_opts:
      type: none
      o: bind
      device: "{{ containers_base_dir }}/data/adguard"
