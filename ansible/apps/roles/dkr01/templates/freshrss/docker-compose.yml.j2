---
version: '3'

services:
  freshrss:
    image: freshrss/freshrss:1.20.2
    container_name: freshrss
    restart: unless-stopped
    environment:
      EZ: Europe/Berlin
      CRON_MIN: 1,31
    volumes:
      - {{containers_base_dir}}/data/freshrss/data:/var/www/FreshRSS/data
      - {{containers_base_dir}}/data/freshrss/extensions:/var/www/FreshRSS/extensions
    labels:
      - traefik.enable=true
      - traefik.http.routers.freshrss.rule=Host(`freshrss.{{ SECRET_DOMAIN }}`)
      - traefik.http.routers.freshrss.entrypoints=websecure
      - traefik.http.routers.freshrss.tls.certresolver=letsencrypt
      - traefik.http.services.freshrss.loadbalancer.server.port=80

    networks:
      - traefik_proxy
      - default

networks:
  traefik_proxy:
    external:
      name: traefik_proxy
  default:
    driver: bridge
